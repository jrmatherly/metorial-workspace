#!/usr/bin/env bash
#MISE description="Check staged changes for pattern compliance"
set -euo pipefail

echo "━━━ Checking Staged Changes ━━━"
echo ""
echo "→ MCP Catalog"
(cd metorial && drift check --staged) || true
echo ""
echo "→ Platform"
(cd metorial-platform && drift check --staged) || true
echo ""
echo "→ Index Registry"
(cd metorial-index && drift check --staged) || true
