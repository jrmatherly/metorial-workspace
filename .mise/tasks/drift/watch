#!/usr/bin/env bash
#MISE description="Watch for real-time pattern detection (prompts for project)"
set -euo pipefail

echo "━━━ Drift Watch Mode ━━━"
echo ""
echo "Select a project:"
echo "  1) MCP Catalog (metorial)"
echo "  2) Platform (metorial-platform)"
echo "  3) Index Registry (metorial-index)"
echo ""
read -p "Enter choice [1-3]: " choice
case $choice in
  1) cd metorial && drift watch ;;
  2) cd metorial-platform && drift watch ;;
  3) cd metorial-index && drift watch ;;
  *) echo "Invalid choice" && exit 1 ;;
esac
